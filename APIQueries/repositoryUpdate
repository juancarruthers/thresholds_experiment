query($repoName: String!, $owner: String!){
  repository(name: $repoName, owner: $owner)
  {
    id
    name
    owner {
            login
          }
    stargazerCount
		url
		isPrivate
    isArchived
    isMirror
    forkCount
    createdAt
    languages(orderBy: {direction: DESC, field: SIZE}, first: 1) {
      edges {
        node {
          name
        }
        size
      }
      totalSize
    }
    defaultBranchRef {
      target {
        ... on Commit {
          history(first: 1) {
            totalCount
            nodes {
              committedDate
            }
          }
        }
      }
    }
    issues(last: 1) {
      totalCount
    }
    pullRequests(last: 1) {
      totalCount
    }
  }
}